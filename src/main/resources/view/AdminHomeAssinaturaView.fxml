<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hortifacil.controller.AdminHomeAssinaturaController"
      spacing="20" alignment="CENTER"
      prefWidth="400" prefHeight="400"
      style="-fx-padding: 30;"
      styleClass="root-pane">

    <!-- TÍTULO -->
    <Label text="Gerenciamento de Assinaturas"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- SUBTÍTULO -->
    <Label text="Escolha uma ação para gerenciar as assinaturas"
           style="-fx-font-size: 14px; -fx-text-fill: #34495e;"/>

    <!-- BOTÕES DE AÇÃO -->
    <Button fx:id="btnCadastrarAssinatura"
            text="Gerenciar Assinaturas"
            prefWidth="250"
            styleClass="button-green"
            onAction="#abrirCadastroAssinatura"/>

    <Button fx:id="btnListarPedidos"
            text="Ver Pedidos de Assinaturas"
            prefWidth="250"
            styleClass="button-green"
            onAction="#abrirListarPedidos"/>

    <!-- BOTÃO DE VOLTAR -->
    <Button fx:id="btnVoltar"
            text="Voltar"
            prefWidth="250"
            styleClass="button-exit"
            onAction="#voltarHome"/>
</VBox>
