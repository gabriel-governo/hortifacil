<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.hortifacil.controller.ClientePagamentoController"
            prefWidth="620" prefHeight="700"
            style="-fx-background-color: white;">

    <!-- Topo -->
    <top>
        <HBox spacing="20" style="-fx-padding: 15; -fx-alignment: CENTER_LEFT;">
            <Button fx:id="btnVoltar" text="← Voltar"
                    onAction="#voltarTelaAnterior"
                    styleClass="button-exit"/>
            <Label text="Pagamento" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Conteúdo -->
    <center>
        <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
                    style="-fx-background-color: #f3f9ef;">
            <VBox spacing="25" alignment="TOP_CENTER" style="-fx-padding: 25;" fillWidth="true">

                <!-- Resumo do Pedido -->
                <VBox spacing="12" alignment="CENTER_LEFT"
                      style="-fx-background-color: white; -fx-padding: 20;
                             -fx-background-radius: 12;
                             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 6, 0, 2, 2);"
                      fillWidth="true">
                    <Label text="Resumo do Pedido:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <VBox fx:id="vboxResumoItens" spacing="5" maxHeight="200" fillWidth="true"
                          style="-fx-background-color: #f9f9f9; -fx-padding: 10; -fx-background-radius: 8;"/>
                    <Separator/>
                    <Label fx:id="lblEndereco" text="Endereço:" wrapText="true" style="-fx-font-size: 14px;"/>
                    <Label fx:id="lblValorTotal" text="Valor total: R$0,00"
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
                </VBox>

                <!-- Forma de Pagamento -->
                <VBox spacing="15" alignment="TOP_LEFT"
                    style="-fx-background-color: white; -fx-padding: 20;
                            -fx-background-radius: 12;
                            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 6, 0, 2, 2);"
                    fillWidth="true">

                    <!-- Título -->
                    <Label text="Forma de pagamento:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <!-- Opções principais -->
                    <VBox spacing="10">
                        <RadioButton fx:id="rbPix" text="Pix"/>
                        <RadioButton fx:id="rbCartao" text="Cartão"/>
                        <RadioButton fx:id="rbDinheiro" text="Dinheiro"/>
                    </VBox>

                    <!-- Separador -->
                    <Separator/>

                    <!-- Conteúdo extra / dinâmico -->
                    <VBox fx:id="containerPagamentoExtra" spacing="20" alignment="TOP_CENTER" fillWidth="true">

                        <!-- PIX -->
                        <VBox fx:id="containerPix" spacing="10" alignment="CENTER"
                            visible="false" managed="false" fillWidth="true">
                            <TextArea fx:id="txtCodigoPix" editable="false" prefHeight="100" wrapText="true"
                                    maxWidth="300"
                                    style="-fx-font-family: monospace; -fx-font-size: 13px; -fx-background-color: #f9f9f9;"/>
                            <ImageView fx:id="qrCodeView" fitWidth="160" fitHeight="160"
                                    preserveRatio="true" visible="false" managed="false"/>
                            <Button fx:id="btnGerarPix" text="Gerar Pix"
                                    onAction="#gerarPix"
                                    style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
                        </VBox>

                        <!-- Dinheiro -->
                        <VBox fx:id="containerDinheiro" spacing="10" alignment="CENTER_LEFT"
                            visible="false" managed="false" fillWidth="true">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <CheckBox fx:id="cbPrecisaTroco" text="Precisa de troco?" />
                                <TextField fx:id="txtTrocoPara" promptText="Valor entregue"
                                        prefWidth="200"
                                        style="-fx-background-radius: 6; -fx-border-color: #ccc; -fx-padding: 5;"/>
                            </HBox>
                        </VBox>

                        <!-- Cartão -->
                        <VBox fx:id="containerCartao" spacing="12"
                            visible="false" managed="false" fillWidth="true">

                            <!-- Cartão na entrega só aparece para pedidos avulsos -->
                            <RadioButton fx:id="rbCartaoNaEntrega" text="Pagar com cartão na entrega" visible="false" managed="false"/>

                            <!-- Cartões cadastrados dinâmicos -->
                            <VBox fx:id="vboxCartoesCadastrados" spacing="8"/>

                            <!-- Novo Cartão -->
                            <RadioButton fx:id="rbCadastrarNovoCartao" text="Cadastrar novo cartão"/>
                            <VBox fx:id="containerNovoCartao" spacing="8" visible="false" managed="false">
                                <TextField fx:id="txtNomeTitular" promptText="Nome do titular"/>
                                <TextField fx:id="txtNumeroCartao" promptText="Número do cartão"/>
                                <TextField fx:id="txtValidade" promptText="Validade (MM/AA)"/>
                                <TextField fx:id="txtCvv" promptText="CVV"/>
                            </VBox>
                        </VBox>

                    </VBox>
                </VBox>


                <!-- Botão Confirmar -->
                <HBox alignment="CENTER">
                    <Button fx:id="btnConfirmar" text="Confirmar Pagamento"
                            onAction="#confirmarPagamento"
                            styleClass="button-green"
                            prefWidth="200" prefHeight="40"/>
                </HBox>

                <!-- Status -->
                <Label fx:id="lblStatus" text="" style="-fx-font-weight: bold;" textFill="red"/>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
