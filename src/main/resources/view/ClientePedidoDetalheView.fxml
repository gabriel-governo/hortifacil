<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.hortifacil.controller.ClientePedidoDetalheController"
            prefWidth="700" prefHeight="600"
            stylesheets="@/css/style.css"
            style="-fx-background-color: #e3f2d8;"> <!-- fundo igual às outras telas -->

    <!-- Topo: botão voltar e título -->
    <top>
        <VBox spacing="5" style="-fx-padding: 15;">
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button fx:id="btnVoltar" text="Voltar" onAction="#voltarParaMeusPedidos" styleClass="button-exit"/>
                <Label fx:id="lblTituloPedido" text="Pedido #0" styleClass="title-label"/>
            </HBox>
            <!-- Informações do cliente -->
            <VBox spacing="2" style="-fx-padding: 0 0 0 60;"> <!-- indentado à direita do botão voltar -->
                <Label fx:id="lblNomeCliente" text="Cliente: Fulano de Tal" style="-fx-font-size: 14pt;"/>
                <Label fx:id="lblEnderecoCliente" text="Endereço: Rua X, nº Y" style="-fx-font-size: 12pt;"/>
            </VBox>
        </VBox>
    </top>

    <!-- Centro: lista de produtos -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox fx:id="produtosContainer" spacing="10" style="-fx-padding: 15;"/>
        </ScrollPane>
    </center>

    <!-- Rodapé: total e pagamento -->
    <bottom>
        <HBox spacing="20" alignment="CENTER_RIGHT" style="-fx-padding: 15;">
            <VBox spacing="5" alignment="CENTER_RIGHT">
                <Label text="Total:" styleClass="title-label"/>
                <Label text="Pagamento:" styleClass="title-label"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="lblTotal" styleClass="title-label"/>
                <Label fx:id="lblPagamento" styleClass="title-label"/>
                <Label fx:id="lblTroco" text="" visible="false"/>
            </VBox>
        </HBox>
    </bottom>

</BorderPane>
