<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hortifacil.controller.AdminHomeController"
      spacing="20" alignment="CENTER"
      prefWidth="800" prefHeight="600"
      style="-fx-padding: 50;"
      styleClass="root-pane">

    <!-- LOGO -->
    <ImageView fx:id="logoImage" fitWidth="200" preserveRatio="true"/>

    <!-- TÍTULO -->
    <Label text="Painel Administrativo"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- SUBTÍTULO -->
    <Label text="Escolha uma opção para gerenciar o sistema"
           style="-fx-font-size: 16px; -fx-text-fill: #34495e;"/>

    <!-- BOTÕES PRINCIPAIS -->
    <Button fx:id="btnProdutos" text="Produtos"
            prefWidth="300" styleClass="button-green"
            onAction="#abrirTelaProdutos"/>

    <Button fx:id="btnPedidos" text="Pedidos"
            prefWidth="300" styleClass="button-green"
            onAction="#abrirTelaPedidos"/> 
            
        <Button fx:id="btnAssinaturas" text="Assinaturas"
            prefWidth="300" styleClass="button-green"
            onAction="#abrirTelaAssinaturas"/>

        <Button fx:id="btnRelatorios" text="Relatórios" 
            prefWidth="300" styleClass="button-green"
            onAction="#abrirRelatorios"/>

   

    <!-- BOTÃO DE SAIR -->
    <Button text="Sair" fx:id="btnSair"
            prefWidth="300" styleClass="button-exit"
            onAction="#voltarLogin"/>
</VBox>
