<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hortifacil.controller.ClienteProdutoListarController"
      alignment="TOP_CENTER"
      stylesheets="@/css/style.css"
      prefWidth="800" 
      prefHeight="800">

    <!-- Topo: barra branca com botão voltar e título -->
    <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-bar">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <!-- Botão Voltar -->
        <Button fx:id="btnVoltar"
                text="Voltar"
                onAction="#handleVoltar"
                styleClass="button-exit"/>

        <!-- Título central -->
        <Label text="Produtos"
               styleClass="title-label"/>

        <!-- Espaço flexível para empurrar os botões à direita -->
        <Region HBox.hgrow="ALWAYS"/>

        <!-- Botões extras -->
        <HBox spacing="10">
            <Button text="Ir ao Food To Save"
                    styleClass="button-green"
                    onAction="#handleIrFoodToSave"
                    prefWidth="180"/>
            <Button text="Ver Carrinho"
                    styleClass="button-green"
                    onAction="#handleVerCarrinho"
                    prefWidth="140"/>
        </HBox>
    </HBox>

    <!-- Conteúdo principal: produtos -->
    <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="700"
            style="-fx-background-color: transparent; -fx-background: white;">
        <FlowPane fx:id="produtosContainer"
                  hgap="30" vgap="30"
                  prefWrapLength="760"
                  style="-fx-background-color: transparent;"/>
    </ScrollPane>

</VBox>
