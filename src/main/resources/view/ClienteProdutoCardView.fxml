<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
    
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hortifacil.controller.ClienteProdutoCardController"
      alignment="CENTER"
      spacing="8"
      styleClass="produto-card-foodtosave"
      prefWidth="240"
      VBox.vgrow="ALWAYS">

    <ImageView fx:id="imagemView"
               fitWidth="180"
               fitHeight="180"
               preserveRatio="true"
               onMouseClicked="#abrirDetalhesProduto"/>

    <Label fx:id="nomeLabel"
            style="-fx-font-size: 18px; -fx-font-weight: bold;"
            wrapText="true"
            maxWidth="210"/>

    <Label fx:id="precoLabel"
           style="-fx-text-fill: green; -fx-font-weight: bold; -fx-font-size: 16px;"/>

    <Label fx:id="quantidadeLabel"
           styleClass="quantidade-disponivel"/>

    <HBox fx:id="avaliacaoBox"
          spacing="2"
          alignment="CENTER">
        <Label fx:id="mediaEstrelasLabel"
               style="-fx-font-size: 16px; -fx-text-fill: #ffb400;"/>
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Label text="Qtd:"/>
        <TextField fx:id="quantidadeField"
                   text="1"
                   prefWidth="60"/>
    </HBox>

    <Button fx:id="adicionarBtn"
            text="Adicionar ao carrinho"
            styleClass="button-green"
            onAction="#handleAdicionarAoCarrinho"
            prefWidth="200" 
            prefHeight="40"/>

    <Label fx:id="mensagemLabel"
           text=""
           style="-fx-text-fill: green;"
           wrapText="true"/>

</VBox>
